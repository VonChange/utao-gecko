<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:id="@+id/exitDialogContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="afterDescendants">

        <LinearLayout
            android:id="@+id/dialogBackdrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/qrDonate"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:contentDescription="打赏二维码"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/donateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="随意打赏\n关注抖音utaotv 后续会发布新软"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exitDialogContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6000000"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="afterDescendants">

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- 画质列表（简化版） -->
            <LinearLayout
                android:id="@+id/hzListInExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 收藏按钮 -->
                <Button
                    android:id="@+id/btnFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:text="收藏当前频道"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:background="@drawable/menu_button_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="取消"
                    android:textColor="#CCCCCC"
                    android:textSize="18sp"
                    android:background="@drawable/menu_button_background"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:clickable="true" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="再次按返回键退出应用\n如有问题关注抖音utaotv"
                android:textColor="#999999"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</layout>


