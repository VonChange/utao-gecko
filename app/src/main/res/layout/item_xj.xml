<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemPresenter"
            type="com.vonchange.utao.gecko.event.EventBlind.XjBindPresenter" />

        <variable
            name="item"
            type="com.vonchange.utao.gecko.domain.XjItem" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/xjItem"
            android:textSize="@dimen/fontDefault"
            android:tag="xjItem"
            android:text="@{item.title+@string/kong+item.remark}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_select"
            android:focusable="true"
            android:onClick="@{() -> itemPresenter.onClick(item)}"
            android:padding="8dp"
            android:layout_margin="8dp"/>
    </LinearLayout>
</layout>