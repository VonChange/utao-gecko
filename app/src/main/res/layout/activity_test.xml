<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.vonchange.utao.gecko.domain.DetailMenu"/>
        <variable
            name="menu"
            type="DetailMenu"/>
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/tvMenu"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                style="?android:attr/button"
                android:id="@+id/hzBtn"
                android:textSize="@dimen/fontDefault"
                android:tag="menu_hz"
                android:text="@{@string/hz+menu.now.hz.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_margin="8dp"
                android:background="@drawable/login_btn_select"
                android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:visibility="@{(menu.xjs.size>0&amp;&amp;(menu.now.xj.index+1)&lt;menu.xjs.size)?View.VISIBLE:View.GONE}"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/nextBtn"
                android:tag="menu_next"
                android:text="@string/next"
                android:textSize="@dimen/fontDefault"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_select"
                android:focusable="true"
                android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:visibility="@{menu.rates.size>0?View.VISIBLE:View.GONE}"
                android:layout_height="wrap_content">
            <Button
                style="?android:attr/button"
                android:id="@+id/rateBtn"
                android:tag="menu_rate"
                android:textSize="@dimen/fontDefault"
                android:text="@{@string/rate+menu.now.rate.name}"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_select"
                android:focusable="true"
                android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{menu.xjs.size>0?View.VISIBLE:View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                style="?android:attr/button"
                android:id="@+id/xjBtn"
                android:tag="menu_xj"
                android:textSize="@dimen/fontDefault"
                android:text="@string/xj"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_select"
                android:focusable="true"
                android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/xjs_view"
            android:visibility="@{menu.tab.equals(`xj`)?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hzs_view"
            android:visibility="@{menu.tab.equals(`hz`)?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rates_view"
            android:visibility="@{menu.tab.equals(`rate`)?View.VISIBLE:View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>